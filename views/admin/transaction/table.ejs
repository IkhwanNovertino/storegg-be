<table id="example2" class="table table-borderless table-hover">
  <thead>
    <tr>
      <th>No.</th>
      <th>Nama Game</th>
      <th>Item</th>
      <th>Total Harga</th>
      <th>Status</th>
      <th>Nama Player</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% transaction.forEach((e, i) => { i++ %>
    <tr>
      <td><%= i %></td>
      <td>
        <ul class="list-inline">
          <li class="list-inline-item">
            <img 
              src="https://storegg-bwa.onrender.com/uploads/<%= e?.historyVoucherTopup?.thumbnail %>" 
              alt="<%= e?.historyVoucherTopup?.gameName %>"
              width="48px"
              height="58px"
            >
          </li>
        </ul>
        <b><%= e?.historyVoucherTopup?.gameName %></b><br>
        <%= e?.historyVoucherTopup?.category %>
      </td>
      <td>
          <span class="badge badge-info">
            <%= e?.historyVoucherTopup?.coinQuantity %> <%= e?.historyVoucherTopup?.coinName %>
          </span>
      </td>
      <td><%= e.value %> </td>
      <td>
        <% if (e.status === 'pending') { %>
          <span class="badge badge-warning">
            <%= e.status %> 
          </span>
          <% } else if (e.status === 'success') { %>
            <span class="badge badge-success">
              <%= e.status %> 
            </span>
          <% } else { %>
            <span class="badge badge-danger">
              <%= e.status %> 
            </span>
        <% } %>
      </td>

      <td><%= e?.player?.name ?? '-' %></td>

      <td>
        <form action="/transaction/status/<%= e._id %>?status=failed&_method=PUT" method="post" class="d-inline-block">
          <% if (e.status !== 'pending') { %>
            <button class="btn btn-danger btn-sm disabled">
              <i class="fas fa-times-circle"></i>
              Tolak
            </button>
            <% } else { %>
              <button class="btn btn-danger btn-sm">
                <i class="fas fa-times-circle"></i>
                Tolak
              </button>
          <% } %>
        </form>
        <form action="/transaction/status/<%= e._id %>?status=success&_method=PUT" method="post" class="d-inline-block">
          <% if (e.status !== 'pending') { %>
            <button class="btn btn-primary btn-sm disabled">
              <i class="fas fa-check"></i>
              Terima
            </button>
            <% } else { %>
            <button class="btn btn-primary btn-sm">
              <i class="fas fa-check"></i>
              Terima
            </button>
          <% } %>
        </form>
      </td>
    </tr>
    <% }) %>

  </tbody>
</table>