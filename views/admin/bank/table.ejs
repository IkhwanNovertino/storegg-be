<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No.</th>
      <th>Nama Pemilik</th>
      <th>Nama Bank</th>
      <th>No.Rekening</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% bank.forEach((e, i) => { i++ %>
    <tr>
      <td><%= i %></td>
      <td><%= e.name %></td>
      <td><%= e.bankName %></td>
      <td><%= e.noRekening %></td>
      <td>
        <form action="/bank/delete/<%= e._id %>?_method=DELETE" method="post">
          <a href="/bank/edit/<%= e._id %>" class="btn btn-warning btn-sm">
            <i class="fas fa-pencil-alt"></i>
            Ubah
          </a>
          <button class="btn btn-danger btn-sm">
            <i class="fas fa-trash-alt"></i>
            Hapus
          </button>
        </form>
      </td>
    </tr>
    <% }) %>

  </tbody>
</table>